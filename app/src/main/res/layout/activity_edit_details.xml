<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#27490C"
    tools:context="com.example.haibulance.EditDetailsActivity">


    <TextView
        android:id="@+id/edit_details_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="casual"
        android:text="Edit Details"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/eddtails_name"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/edtxt_rounded"
        android:hint="Name"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:shadowColor="#FFFFFF"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_details_title" />

    <EditText
        android:id="@+id/eddtails_password"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/edtxt_rounded"
        android:hint="Password"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:shadowColor="#FFFFFF"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/eddtails_email"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/eddtails_email"
        app:layout_constraintTop_toBottomOf="@+id/eddtails_email" />

    <EditText
        android:id="@+id/eddtails_email"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/edtxt_rounded"
        android:hint="Email"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:shadowColor="#FFFFFF"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/eddtails_name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/eddtails_name"
        app:layout_constraintTop_toBottomOf="@+id/eddtails_name" />

    <Button
        android:id="@+id/eddtails_update_btn"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="124dp"
        android:background="@drawable/button_rounded"
        android:text="Update details"
        app:layout_constraintEnd_toEndOf="@+id/eddtails_password"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/eddtails_password"
        app:layout_constraintTop_toBottomOf="@+id/eddtails_password" />

    <Button
        android:id="@+id/eddtails_cancle_btn"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/button_rounded"
        android:text="Cancle"
        app:layout_constraintEnd_toEndOf="@+id/eddtails_update_btn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/eddtails_update_btn"
        app:layout_constraintTop_toBottomOf="@+id/eddtails_update_btn" />

    <Button
        android:id="@+id/eddtails_radius_btn"
        android:layout_width="222dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_rounded"
        android:text="change reprorts radius"
        app:layout_constraintEnd_toEndOf="@+id/eddtails_password"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/eddtails_password"
        app:layout_constraintTop_toBottomOf="@+id/eddtails_password" />


</androidx.constraintlayout.widget.ConstraintLayout>
