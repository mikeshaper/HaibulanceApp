<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#27490C"
    tools:context=".LoginActivity">

    <EditText
        android:id="@+id/login_password_edtxt"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/edtxt_rounded"
        android:ems="10"
        android:hint="סיסמה"
        android:inputType="textPassword"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:layout_constraintEnd_toEndOf="@+id/login_email_edtxt"
        app:layout_constraintStart_toStartOf="@+id/login_email_edtxt"
        app:layout_constraintTop_toBottomOf="@+id/login_email_edtxt" />


    <EditText
        android:id="@+id/login_email_edtxt"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/edtxt_rounded"
        android:ems="10"
        android:hint="אימייל"
        android:inputType="textEmailAddress"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/login_button_reg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_rounded"
        android:text="כניסה"
        app:layout_constraintEnd_toEndOf="@+id/login_password_edtxt"
        app:layout_constraintStart_toStartOf="@+id/login_password_edtxt"
        app:layout_constraintTop_toBottomOf="@+id/login_password_edtxt" />

    <TextView
        android:id="@+id/back_to_reg_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="חזרה להרשמה"
        android:textColor="#C3FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/login_button_reg"
        app:layout_constraintStart_toStartOf="@+id/login_button_reg"
        app:layout_constraintTop_toBottomOf="@+id/login_button_reg" />


    <TextView
        android:id="@+id/login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="177dp"
        android:layout_marginLeft="177dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="176dp"
        android:layout_marginRight="176dp"
        android:text="כניסה"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>